# backend/.env.example
APP_HOST=0.0.0.0
APP_PORT=8000

# Database (use sqlite for dev, postgres for production)
DATABASE_URL=sqlite:///./data/socialflux.db
# For Postgres example: postgresql://user:pass@db:5432/socialflux

# Redis (for Celery)
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# JWT / Auth
SECRET_KEY=change_this_to_a_secure_random_string
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Fernet key (used to encrypt user tokens locally)
FERNET_KEY=
